@model Prueba_Clinica.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mi Información</h2>

<div>
    <h4>Paciente</h4>
    <hr />
    <div class="form-group">
        <div class="form-group">
            <strong>RUN:</strong>
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.run_usuario)
        </div>

        <div class="form-group">
            <strong>Nombre:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.nombre_usuario)
        </div>

        <div class="form-group">
            <strong>A. Paterno:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.apellidoP_usuario)
        </div>

        <div class="form-group">
            <strong>A. Materno:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.apellidoM_usuario)
        </div>

        <div class="form-group">
            <strong>Fecha de Nacimiento:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.fecha_nac_usuario)
        </div>

        <div class="form-group">
            <strong>Usuario:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.usuario1)
        </div>

        <div class="form-group">
            <strong>Contraseña:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.password_usuario)
        </div>

        <div class="form-group">
            <strong>Dirección:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.direccion_usuario)
        </div>

        <div class="form-group">
            <strong>Región:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.Comuna.id_region)
        </div>

        <div class="form-group">
            <strong>Comuna:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.Comuna.nombre_comuna)
        </div>

        <div class="form-group">
            <strong>Email:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.email_usuario)
        </div>

        <div class="form-group">
            <strong>Fono:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.fono_usuario)
        </div>

        <div class="form-group">
            <strong>RUN Persona a Cargo:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.persona_cargo)
        </div>

        <div class="form-group">
            <strong>Status:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.status_usuario)
        </div>

        <div class="form-group">
            <strong>Fecha de Creación:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.fecha_creacion)
        </div>

        <div class="form-group">
            <strong>Categoria:</strong>
        </div>

        <div class="form-control">
            @Html.DisplayFor(model => model.Tipo_Usuario.nombre_usuario)
        </div>
    </div>
</div>
<hr />

<p>
    <input onclick="document.location.href='@Url.Action("Modificar", "Usuarios", new { id = Model.run_usuario })'" type="button" value="Modificar" class="btn btn-outline-success" /> |
    <input onclick="document.location.href='@Url.Content("~/Usuarios/Index")'" type="button" value="Volver a la lista" class="btn btn-outline-dark" />
</p>
